{
  "manifest_version": 3,
  "name": "YouTube search box shortcut",
  "version": "1.0",
  "description": "When on YouTube, focus search box using 'y' key",

  "icons": {
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },
  "content_scripts": [
    {
      "js": ["scripts/content.js"],
      "matches": [
        "https://www.youtube.com/*"
      ]
    }
  ]
}
